<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kirandeep.subtractiontutor.PracticeHome"
    android:background="@drawable/bkground">

    <LinearLayout android:id="@+id/main1"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_weight="7.65">

            <ImageView
            android:layout_width="139dp"
            android:layout_height="53dp"
            android:text="Text to Speech"
            android:src="@drawable/instruc"
            android:id="@+id/button1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/scoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/point_font_size">
            </TextView>

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/problemView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_size">
                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:width="@dimen/answerButton_width" >

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/textAnswerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/submit"
                    android:text="Submit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/keyrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/key1"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/font_size" >

                </Button>

                <Button
                    android:id="@+id/key2"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/font_size" >

                </Button>

                <Button
                    android:id="@+id/key3"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/font_size" >

                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/keyrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/key4"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="@dimen/font_size">
                </Button>

                <Button
                    android:id="@+id/key5"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="@dimen/font_size">
                </Button>

                <Button
                    android:id="@+id/key6"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="@dimen/font_size">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/keyrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/key7"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="@dimen/font_size">
                </Button>

                <Button
                    android:id="@+id/key8"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="@dimen/font_size">
                </Button>

                <Button
                    android:id="@+id/key9"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="@dimen/font_size">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/keyrow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/key0"
                    android:layout_width="@dimen/answerButton_width"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/font_size">
                </Button>

            </LinearLayout>

            <ImageButton
                android:id="@+id/helpButton"
                android:scaleType="center"
                android:src="@drawable/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dip"
                android:background="@drawable/help"
                android:contentDescription="@string/help_button"
                />

            <TableLayout
                android:id="@+id/myTableLayout"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Text to Speech"
        android:src="@drawable/speaker"
        android:id="@+id/button"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
