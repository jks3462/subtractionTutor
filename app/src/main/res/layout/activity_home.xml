<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:weightSum="1"
    android:background="@drawable/bkground">

    <com.example.kirandeep.subtractiontutor.GIFView_bird

        android:layout_width="354dp"

        android:layout_height="70dp"
        android:layout_marginBottom="2dp"
        components:src="@drawable/bird1" />

    <ImageView
        android:id="@+id/buttonSignIN"
        android:src="@drawable/signin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:onClick="signIn"/>

    <ImageView
        android:id="@+id/buttonSignUP"
        android:src="@drawable/signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up" />

    <com.example.kirandeep.subtractiontutor.GIFView_teacher

    android:layout_width="166dp"

    android:layout_height="162dp"
        android:layout_marginBottom="2dp"
        components:src="@drawable/teacher"
        android:layout_gravity="right" />


</LinearLayout>