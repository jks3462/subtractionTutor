<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/bgsignup"
	>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="140dp"
		android:layout_gravity="center_vertical"
		android:padding="3dp"
		>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="150sp"
			android:text="@string/operator_1_min_max"
			android:padding="6dp"
			/>
		<EditText
			android:id="@+id/operator1min"
			android:text="@string/_10"
			android:layout_height="wrap_content"
			android:layout_width="50sp"
			android:textSize="18sp"
			android:layout_gravity="center_horizontal"
			android:inputType="numberSigned"/>
		<EditText
			android:id="@+id/operator1max"
			android:text="@string/_10"
			android:layout_height="wrap_content"
			android:layout_width="50sp"
			android:textSize="18sp"
			android:layout_gravity="center_horizontal"
			android:inputType="numberSigned"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_gravity="center_vertical"
		android:padding="3dp"
		>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="150sp"
			android:text="@string/operator_2_min_max"
			android:padding="6dp"
			/>
		<EditText
			android:id="@+id/operator2min"
			android:layout_height="wrap_content"
			android:text="@string/_10"
			android:layout_width="50sp"
			android:textSize="18sp"
			android:layout_gravity="center_horizontal"
			android:inputType="numberSigned"/>
		<EditText
			android:id="@+id/operator2max"
			android:layout_height="wrap_content"
			android:text="@string/_10"
			android:layout_width="50sp"
			android:textSize="18sp"
			android:layout_gravity="center_horizontal"
			android:inputType="numberSigned"/>
	</LinearLayout>



	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="80dp"
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/saveOptions"
			android:src="@drawable/save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/save_options"
			>
		</ImageView>
	</LinearLayout>
</LinearLayout>